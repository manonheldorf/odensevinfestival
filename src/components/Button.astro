---

//henter parametrene fra Astro.props
const{ variant="primary", size="medium"} = Astro.props;

//Definer den styling (Tailwind classes, der gør dig gældende for alle knapper)
const buttonStyling = " px-8 py-2  rounded-xl shadow-md font-header uppercase";

//Definer den styling (Tailwind Classes), der gør sig gældende for de forskellige varianter
const variantClasses={
"primary": " bg-red text-beige  transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:bg-red-hover selected:bg-red-selected cursor-pointer",
"secondary": "bg-beige text-red transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:bg-beige-hover cursor-pointer",
"tertiary": "bg-green text-beige transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:bg-green-hover cursor-pointer",
};

//Definer den styling (Tailwind classes), der gør sig gældende de forskellige størrelser
const sizeClasses = {
    "large": "text-lg",
    "medium": "text-base",
    "small": "text-sm"
};
---


<div>
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>