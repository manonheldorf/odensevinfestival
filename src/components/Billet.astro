---
import Heading from '../components/Heading.astro';
import Link from '../components/Link.astro';

const { url="#", cardimage="", cardimagealt="", cardtitel="", cardundertitel="", cardtekst="", cardpris="", cardbuttontekst="",
  badgenyt="false", badgerabat="false", badgefaatilbage="" } = Astro.props;
---

<div class="card bg-beige w-full shadow-md rounded-xl">
    <figure class="relative">
      {(badgenyt === "true") && <div class="badge  bg-red p-4 text-beige rounded-md absolute top-4 left-0">Få tilbage</div>}
      {(badgerabat !== "false") && <div class="badge badge-secondary absolute rounded-full top-4 right-0 hover:rotate-6 transition-all">20 %</div>}
      {(badgefaatilbage === "true") && <div class="badge badge-warning @sm:badge-xl absolute bottom-4 left-0">Kun få flasker tilbage</div>}
      <img class="p-4 rounded-2xl "
       src={cardimage}
       alt={cardimagealt} />
    </figure>
    <div class="card-body">
      <Heading htmlheading="h2" size="medium" Stylingclasses="card-titel">{cardtitel}</Heading>
      <p>{cardundertitel}</p>
      <p>{cardtekst}</p>
      <p>{cardpris}</p>
      <div class="card-actions justify-end">
        <Link href={url} variant="primary" size="small">{cardbuttontekst}</Link>
      </div>
    </div>
  </div>