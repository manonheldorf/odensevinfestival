---
// Henter parametrene fra Astro.props
const { htmlheading="h2", size="medium", space="", variant=""} = Astro.props; 
const Htmlheading = htmlheading;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"xlarge": "text-7xl pb-8",
"large": "text-5xl font-bold pb-8",
"medium": "text-xl pb-4",
"small": "text-base pb-4",
};

const spaceClasses = {
"none": "",
"normal": "pl-12",
};

const stylingClasses = {
"primary": "text-beige",
"secondary": "text-red",
"tertiary": "text-green",
};
---
<Htmlheading class:list={[sizeClasses[size], spaceClasses[space], stylingClasses[variant]]}><slot /></Htmlheading>