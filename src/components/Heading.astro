---
// Henter parametrene fra Astro.props
const { htmlheading="h2", size="medium", variant=""} = Astro.props; 
const Htmlheading = htmlheading;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"xlarge": "text-8xl",
"large": "text-4xl",
"medium": "text-xl",
"small": "text-base font-bold",
};

const stylingClasses = {
"primary": "text-beige",
"secondary": "text-red",
"tertiary": "text-green",
};
---
<Htmlheading class:list={[sizeClasses[size], stylingClasses[variant]]}><slot /></Htmlheading>