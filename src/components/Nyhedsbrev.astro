---
import Button from '../components/Button.astro';
import Heading from '../components/Heading.astro';
---

<section class=" bg-beige">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    
    <!-- Billede til venstre -->
    <div class="w-full">
      <img 
        src="/vinbillede.png" 
        alt="Beskrivende tekst" 
        class="w-full h-auto max-h-[500px] object-cover"
      />
    </div>

    <!-- Formular til hÃ¸jre -->
    <div class="w-full">
      
      <form class="bg-beige space-y-6">
        <div class="p-12">
        <Heading htmlheading="h2" size="large" variant="secondary">TILMELD DIG VORES NYHEDSBREV</Heading>
        <div class="pb-4">
        <input 
          type="text" 
          name="fornavn" 
          placeholder="Fornavn" 
          required
          class="w-full p-4 text-md border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-hover transition"
        />
      </div>
      <div class="pb-4">
        <input 
          type="text" 
          name="efternavn" 
          placeholder="Efternavn" 
          required
          class="w-full p-4 text-md border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-hover transition"
        />
      </div>
      <div class="pb-4">
        <input 
          type="email" 
          name="email" 
          placeholder="E-mail" 
          required
          class="w-full p-4 text-md border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-hover transition"
        />
      </div>
      <div class="flex justify-end">
             <Button>TILMELD NYHEDSBREV</Button>
            </div>
      </div>
      </form>
    </div>
  </div>
</section>

