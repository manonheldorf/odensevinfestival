---
import Button from '../components/Button.astro';
---

<section class="max-w-6xl mx-auto p-6 bg-beige">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    
    <!-- Billede til venstre -->
    <div class="w-full">
      <img 
        src="/vinbillede.png" 
        alt="Beskrivende tekst" 
        class="w-full h-auto max-h-[500px] object-cover"
      />
    </div>

    <!-- Formular til hÃ¸jre -->
    <div class="w-full">
      
      <form class="bg-beige p-8 space-y-6">
        <h2 class="text-3xl font-bold mb-6 text-red text-center md:text-left">
          TILMELD DIG VORES NYHEDSBREV
        </h2>
        <input 
          type="text" 
          name="fornavn" 
          placeholder="Fornavn" 
          required
          class="w-full p-5 text-lg border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
        />

        <input 
          type="text" 
          name="efternavn" 
          placeholder="Efternavn" 
          required
          class="w-full p-5 text-lg border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
        />

        <input 
          type="email" 
          name="email" 
          placeholder="E-mail" 
          required
          class="w-full p-5 text-lg border border-red text-red placeholder-red rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
        />
<div class="flex justify-end mt-6">
       <Button>TILMELD NYHEDSBREV</Button>
      </div>
      </form>
    </div>
  </div>
</section>
