<section class="max-w-xl mx-auto p-6 bg-gray-100 rounded-2xl shadow-xl space-y-10">
  <!-- Billede -->
  <div class="w-full">
    <img 
      src="/vinbillede.png" 
      alt="Beskrivende tekst" 
      class="w-full h-auto max-h-[500px] object-cover rounded-xl shadow-md"
    />
  </div>

  <!-- Formular -->
  <div>
    <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Tilmeld dig vores nyhedsbrev</h2>

    <form class="bg-white p-8 rounded-3xl shadow-md space-y-6">
      <input 
        type="text" 
        name="fornavn" 
        placeholder="Fornavn" 
        required
        class="w-full p-5 text-lg border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      />

      <input 
        type="text" 
        name="efternavn" 
        placeholder="Efternavn" 
        required
        class="w-full p-5 text-lg border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      />

      <input 
        type="email" 
        name="email" 
        placeholder="E-mail" 
        required
        class="w-full p-5 text-lg border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      />

      <button 
        type="submit" 
        class="w-full py-4 text-lg font-semibold bg-red-700 text-white rounded-xl hover:bg-red-800 transition"
      >
        TILMELD
      </button>
    </form>
  </div>
</section>
