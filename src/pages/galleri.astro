---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import Nyhedsbrev from "../components/Nyhedsbrev.astro";
import Nyhedsbrevred from '../components/Nyhedsbrevred.astro';
import Nyhedsbrevgreen from "../components/Nyhedsbrevgreen.astro";
---

<MainLayout title="Galleri - Odense Vinfestival">
  <section class="bg-beige">
    <div class="max-w-4xl mx-auto px-4"> <!-- max width + centrering + lidt padding -->
      <h1 class="text-7xl font-display text-red text-center fade-up pt-8 pb-12">Galleri fra 2025</h1>
  
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3 content-center fade-up">
        <div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri1.jpg" alt="Galleri billede 1" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri2.jpg" alt="Galleri billede 2" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri3.jpg" alt="Galleri billede 3" />
          </div>
        </div>
  
        <div class="pb-6">
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri4.jpg" alt="Galleri billede 4" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri5.jpg" alt="Galleri billede 5" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri6.jpg" alt="Galleri billede 6" />
          </div>
        </div>
  
        <div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri7.jpg" alt="Galleri billede 7" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri8.jpg" alt="Galleri billede 8" />
          </div>
          <div class="pb-6">
            <img loading="lazy" class="h-auto max-w-full object-cover object-center" src="/galleri9.png" alt="Galleri billede 9" />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  
<section>
  <Nyhedsbrevgreen></Nyhedsbrevgreen>
</section>

<style>
	.fade-up {
  opacity: 0;
  transition: opacity 0.3s ease;
}
.fade-up.animate {
  opacity: 1;
  animation: fadeInUp 3s;
}
</style>